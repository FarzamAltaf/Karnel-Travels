@model Users

@if (TempData.ContainsKey("registered"))
{
    <div class="alert alert-success alert-dismissible" id="registeredAlert">
        @TempData["registered"]
    </div>
}
@if (TempData.ContainsKey("userExist"))
{
    <div class="alert alert-danger alert-dismissible" id="userExistAlert">
        @TempData["userExist"]
    </div>
}

<div class="login-modal">
    <div class="modal-dialog modal-dialog-centered w-50 mt-5">
        <div class="modal-content">
            <div class="modal-body">
                <div class="login-registration-form">
                    <div class="form-title text-center mb-4">
                        <h2 class="h4">Sign Up to Continue</h2>
                        <p class="text-muted">Enter your details to create an account.</p>
                    </div>
                    <form method="post">
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Username" asp-for="username" />
                            <span asp-validation-for="username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="email" class="form-control" placeholder="Email" asp-for="email" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" class="form-control" placeholder="Password" asp-for="password" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-4">Sign Up</button>
                        <div class="text-center">
                            <div class="divider mb-3">
                                <span class="text-muted">or</span>
                            </div>
                            <a asp-controller="Home" asp-action="signin" class="btn btn-outline-danger w-100">
                                <div class="d-flex align-items-center justify-content-center">
                                    <svg width="20px" height="20px" class="mx-2" viewBox="-3 0 262 262" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid"><path d="M255.878 133.451c0-10.734-.871-18.567-2.756-26.69H130.55v48.448h71.947c-1.45 12.04-9.283 30.172-26.69 42.356l-.244 1.622 38.755 30.023 2.685.268c24.659-22.774 38.875-56.282 38.875-96.027" fill="#4285F4" /><path d="M130.55 261.1c35.248 0 64.839-11.605 86.453-31.622l-41.196-31.913c-11.024 7.688-25.82 13.055-45.257 13.055-34.523 0-63.824-22.773-74.269-54.25l-1.531.13-40.298 31.187-.527 1.465C35.393 231.798 79.49 261.1 130.55 261.1" fill="#34A853" /><path d="M56.281 156.37c-2.756-8.123-4.351-16.827-4.351-25.82 0-8.994 1.595-17.697 4.206-25.82l-.073-1.73L15.26 71.312l-1.335.635C5.077 89.644 0 109.517 0 130.55s5.077 40.905 13.925 58.602l42.356-32.782" fill="#FBBC05" /><path d="M130.55 50.479c24.514 0 41.05 10.589 50.479 19.438l36.844-35.974C195.245 12.91 165.798 0 130.55 0 79.49 0 35.393 29.301 13.925 71.947l42.211 32.783c10.59-31.477 39.891-54.251 74.414-54.251" fill="#EB4335" /></svg>
                                    Already have an account? Sign in
                                </div>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Signup Modal End -->


<script>
    // Auto-hide alerts after 5 seconds
    setTimeout(function () {
        var registeredAlert = document.getElementById("registeredAlert");
        var userExistAlert = document.getElementById("userExistAlert");

        if (registeredAlert) {
            registeredAlert.style.display = "none";
        }

        if (userExistAlert) {
            userExistAlert.style.display = "none";
        }
    }, 5000); // 5000ms = 5 seconds
</script>