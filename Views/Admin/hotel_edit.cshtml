@model Hotel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";



    ViewData["Title"] = "Edit Hotel";
}

<div class="row">
    <div class="col-xl-12">
        <div class="main-content-title-profile mb-50">
            <div class="main-content-title">
                <h3>Update Hotel</h3>
            </div>
        </div>
        <div class="dashboard-profile-wrapper two">
            <div class="dashboard-profile-tab-content">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Name</label>
                                <input type="text" name="name" value="@Model.name" placeholder="Hotel name here..." required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Address</label>
                                <input type="text" name="address" value="@Model.address" placeholder="Address here..." required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Map Link</label>
                                <input type="text" name="maplink" value="@Model.maplink" placeholder="Map link here...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Price</label>
                                <input type="number" name="price" value="@Model.price" placeholder="Price here...">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Max Room</label>
                                <input type="number" name="maxRoom" value="@Model.maxRoom" placeholder="Price here...">
                            </div>
                        </div>

                       <div class="col-md-6">
                            <div class="form-inner mb-30">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                    <option value="Available">
                                        Available
                                    </option>
                                    <option value="Not Available">
                                        Not Available
                                    </option>
                                </select>
                            </div>
                        </div>
              
                    </div>
                
                    <div class="form-inner">
                        <button type="submit" class="primary-btn3">Update Hotel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>